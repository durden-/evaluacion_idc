<h1>Registro de entrada</h1>

<%= form_for(:session, :url => sessions_path) do |f| %>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label :password %><br />
    <%= f.password_field :password %>
  </div>
  <div class="actions">
    <%= f.submit "Registrarme" %>
  </div>
<% end %>

<p>No te has registrado? <%= link_to "Registrate ahora!", signup_path %></p>
